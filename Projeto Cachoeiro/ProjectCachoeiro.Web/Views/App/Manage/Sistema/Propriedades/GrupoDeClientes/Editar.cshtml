@model ProjectCachoeiro.Web.Comercial.GrupoDeClientes
@{
    ViewData["Title"] = "Editar grupo de clientes";
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("~/Views/App/Manage/Sistema/_ManageNav.cshtml")
<div class="inner-content">
    <div class="view-element">
        <div class="toolbar">
            <div class="left">
                <h2>Editar grupo de clientes</h2>
            </div>
            <div class="clean"></div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form id="form" asp-action="Editar">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" />
                        <span asp-validation-for="Nome"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao"></label>
                        <input asp-for="Descricao" />
                        <span asp-validation-for="Descricao"></span>
                    </div>
                </form>
            </div>
        </div>
        @await Html.PartialAsync("~/Views/Shared/AppTaskbar.cshtml", "EDIT;ID=" + Model.Id + ";")
    </div>
</div>
<div class="clean"></div>