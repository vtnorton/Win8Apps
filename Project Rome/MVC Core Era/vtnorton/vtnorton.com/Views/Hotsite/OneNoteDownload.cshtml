<section class="hero" id="Home">
    <div class="section-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="logo">
                    <a href="#">
                        <img src="/onenote/img/logo.png" alt="Guia definitivo para o OneNote">
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <div class="welcome-message">
