@model ProjectCachoeiro.Web.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar usuário";
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-9">
        <div class="view-element">
            <div class="toolbar">
                <div class="left">
                    <h2>Editar usuário</h2>
                </div>
                <div class="clean"></div>
            </div>
            
            <div class="row">
                <div class="col-md-10">
                    <form id="form" asp-action="Editar">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="Nome"></label>
                                <input asp-for="Nome" />
                                <span asp-validation-for="Nome"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Sobrenome"></label>
                                <input asp-for="Sobrenome" />
                                <span asp-validation-for="Sobrenome"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="CPF"></label>
                                <input asp-for="CPF" class="cpf" />
                                <span asp-validation-for="CPF"></span>
                            </div>
                            <div class="col-md-4">
                                <label>Data de nascimento</label>
                                <input asp-for="DataDeNascimento" />
                                <span asp-validation-for="DataDeNascimento"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Email"></label>
                                <input type="email" asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-4">
                                <label>Telefone</label>
                                <input asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- TODO: opção de bloquear usuário -->
        <!-- TODO: opção de redefinir senha -->
        <!-- TODO: opção de retirar usuário de administração total do sistema -->
        <div class="view-bottom">
            <hr />
            <p class="small">Legenda da tabela e outras informações importantes a serem acrescentadas aqui.</p>
        </div>
    </div>

    <div class="info-bar col-md-3">
        @{
            OtherOptions otherOptions = new OtherOptions
            {
                Descricao = "Veja opções relacionadas com a apresentação de itens.",
                FeedbackEChamadoID = "ItemFamilia",
                OpcoesRelacionadas = new Links[] {
                    new Links{
                        Titulo = "Adicionar família",
                        Url = "/Familias/Create"
                    },
                    new Links{
                        Titulo = "Adicionar estado de produto",
                        Url = "/Estados/Create"
                    },
                    new Links{
                        Titulo = "Adicionar produto",
                        Url = "/Produtos/Create"
                    }
                }
            };
        }
        @Html.Partial("AppOtherOptions", otherOptions)
    </div>
</div>
<div class="taskbar">
    <div class="left">
        <a class="btn btn-link" asp-action="Index"><i class="fa fa-list-ul"></i> Voltar</a>
    </div>
    <div class="right">
        <!-- TODO: Implementar função Limpar -->
        <a class="btn btn-success" onclick="$('#form').submit();"><i class="fa fa-save"></i> Salvar</a>
    </div>
    <div class="clean"></div>
</div>