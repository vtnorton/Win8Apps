@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetar senha";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <hr />
    <div asp-validation-summary="All"></div>
    <input asp-for="Code" type="hidden" />

    <input asp-for="Email" placeholder="E-mail" />
    <span asp-validation-for="Email"></span>

    <input asp-for="Password" placeholder="Senha" />
    <span asp-validation-for="Password"></span>

    <input asp-for="ConfirmPassword" placeholder="Confirmar senha" />
    <span asp-validation-for="ConfirmPassword"></span>

    <div class="box-options">
        <button type="submit" class="btn btn-default" style="width:50%">Resetar</button>
    </div>
</form>