@model IEnumerable<ProjectCachoeiro.Web.Models.Utilitarios.Imagem>
@{
    ViewData["Title"] = "Imagens";
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-9">
        <div class="view-element">
            <div class="toolbar">
                <div class="left">
                    <h2>Imagens</h2>
                </div>
                <div class="right">
                    <a asp-action="Criar" class="btn"><i class="fa fa-plus"></i> Criar novo</a>
                </div>
                <div class="clean"></div>
            </div>
            <!-- Fazer esta página ficar parecida com a de mídia do WordPress -->
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.URL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Alt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CorPredominante)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.URL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorPredominante)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
    }
                </tbody>
            </table>
        </div>
        <div class="view-bottom">
            <hr />
            <p class="small">Legenda da tabela e outras informações importantes a serem acrescentadas aqui.</p>
        </div>
    </div>
    <div class="info-bar col-md-3">
        @{
            OtherOptions otherOptions = new OtherOptions
            {
                Descricao = "Veja opções relacionadas com a apresentação de itens.",
                FeedbackEChamadoID = "ItemFamilia",
                OpcoesRelacionadas = new Links[] {
                    new Links{
                        Titulo = "Adicionar família",
                        Url = "/Familias/Create"
                    },
                    new Links{
                        Titulo = "Adicionar estado de produto",
                        Url = "/Estados/Create"
                    },
                    new Links{
                        Titulo = "Adicionar produto",
                        Url = "/Produtos/Create"
                    }
                }
            };
        }
        @Html.Partial("AppOtherOptions", otherOptions)
    </div>
</div>