    ViewData["Description"] = "Trabalhe em equipe, em todos os lugares com essa incrível ferramenta!";
    ViewData["Keywords"] = "onenote, ms onenote, onenote 2016, office 365, microsoft office";
}
@section metatags{
    <link href="/onenote/css/main.css" rel="stylesheet">
    <script type="text/javascript">
        setTimeout('window.open("/onenote/Guia-definitivo-para-o-OneNote-v1.0.pdf", "_blank")', 3000);
    </script>
}
@section submenu{
    <li><a href="/onenote" data-scroll>Saiba mais</a></li>
    <li><a href="/vitor">Sobre mim</a></li>
}
