@model ProjectCachoeiro.Web.Models.Produtos.Espessura
@{
    ViewData["Title"] = "Criar espessura";
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("~/Views/App/Manage/Sistema/_ManageNav.cshtml")
<div class="inner-content">
    <div class="toolbar">
        <div class="left">
            <h2>Criar Espessura de produto</h2>
        </div>
        <div class="clean"></div>
    </div>
    <div class="view-element">
        <form id="form" asp-action="Criar">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" />
                        <span asp-validation-for="Nome"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Expessura"></label>
                        <input asp-for="Expessura" type="number" />
                        <span asp-validation-for="Expessura"></span>
                    </div>
                </div>
            </div>
        </form>
        @await Html.PartialAsync("~/Views/Shared/AppTaskbar.cshtml", "CREATE")
    </div>
    <div class="view-bottom">
        <hr />
        <p class="small">A espessura de um produto será utilizado na tranformação de uma família do tipo primária para o tipo secundária. Somente administradores podem criar ou editar espessuras de produtos.</p>
    </div>
</div>
<div class="clean"></div>