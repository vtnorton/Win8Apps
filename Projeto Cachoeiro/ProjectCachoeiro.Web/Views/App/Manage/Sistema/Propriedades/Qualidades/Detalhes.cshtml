@model ProjectCachoeiro.Web.Models.Produtos.Qualidade

@{
    ViewData["Title"] = "Detalhes: " + Model.Nome;
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("~/Views/App/Manage/Sistema/_ManageNav.cshtml")
<div class="inner-content">
    <div class="toolbar">
        <div class="left">
            <h2>@Html.DisplayFor(model => model.Nome)</h2>
        </div>
        <div class="clean"></div>
    </div>
    
    <div class="view-element">
        <div class="row">
            <div class="col-md-7 col-sm-6">
                <h4>Descrição</h4>
                <p>@Html.DisplayFor(model => model.Descricao)</p>
            </div>
            <div class="col-md-5 col-sm-6">
                <h4>Registros</h4>
                <p>Conheça os detalhes do cadastro e de possíveis alterações realizadas neste item.</p>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateCreated)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserCreated)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserCreated)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DateModified)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateModified)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserModified)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserModified)
                    </dd>
                </dl>
            </div>
        </div>
        @await Html.PartialAsync("~/Views/Shared/AppTaskbar.cshtml", "VIEW;ID=" + Model.Id + ";")
    </div>
</div>
<div class="clean"></div>