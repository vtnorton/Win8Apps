<Page
    x:Class="SunApp.MasterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SunApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <SplitView x:ConnectionId='1' CompactPaneLength="50" x:Name="MySliptView" OpenPaneLength="300" DisplayMode="CompactOverlay" >
        <SplitView.Pane>
            <StackPanel Background="#1b1b1b">
                <StackPanel Background="Green" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Background="Green" >
                        <Button x:ConnectionId='30'  x:Name="btnMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                                Width="50" Height="50"                      ></Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:ConnectionId='2' x:Name="stpHome"                                                                                                   Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='27' Grid.Column="0" x:Name="gridHome" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='28' Grid.Column="1" x:Name="btnHome" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='29' Grid.Column="2" x:Name="txtHome" Text="Início" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='3' x:Name="stpPlantation"                                                                                                                     Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='24' Grid.Column="0" x:Name="gridPlantation" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='25' Grid.Column="1" x:Name="btnPlantation" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE735;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='26' Grid.Column="2" x:Name="txtPlantation" Text="Plantios" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='4' x:Name="stpFinancial"                             Orientation="Horizontal"                                                                                    >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='21' Grid.Column="0" x:Name="gridFinancial" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='22' Grid.Column="1" x:Name="btnFinancial" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE8EC;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='23' Grid.Column="2" x:Name="txtFinancial" Text="Financeiro" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='5' x:Name="stpHumans"                          Orientation="Horizontal"                                                                              >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='18' Grid.Column="0" x:Name="gridHumans" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='19' Grid.Column="1" x:Name="btnHumans" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE716;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='20' Grid.Column="2" x:Name="txtHumans" Text="Recursos humanos" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='6' x:Name="stpSetting"                            Orientation="Horizontal"                                                                                >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='15' Grid.Column="0" x:Name="gridSettings" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='16' Grid.Column="1" x:Name="btnSettings" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#59155;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='17' Grid.Column="2" x:Name="txtSettings" Text="Configurações" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='7' x:Name="stpHelp"                        Orientation="Horizontal"                                                                          >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='12' Grid.Column="0" x:Name="gridHelp" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='13' Grid.Column="1" x:Name="btnHelp" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE897;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='14' Grid.Column="2" x:Name="txtHelp" Text="Ajuda" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='8' x:Name="stpAbout"                         Orientation="Horizontal"                                                                            >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='9' Grid.Column="0" x:Name="gridAbout" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='10' Grid.Column="1" x:Name="btnAbout" Foreground="White" FontFamily="Segoe MDL2 Assets" Content="&#xE171;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='11' Grid.Column="2" x:Name="txtAbout" Text="Sobre" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </StackPanel>

        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="LightGray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Background="Green"  Grid.Row="0">
                </Grid>
                <Frame x:ConnectionId='31' Grid.Row="1" x:Name="frameBody"></Frame>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

