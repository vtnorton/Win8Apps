@using Microsoft.AspNetCore.Mvc.Localization
@using Vtnorton.Model
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Random 42";
    ViewData["Description"] = Localizer["NiceShortDescription"].Value;
    ViewData["Keywords"] = "random 42, sorteador, aplicativos, windows 10, windows insider, desenvolvedor indie";
}
@section submenu{
    <li><a href="#">Random 42</a></li>
    <li><a href="http://blog.vtnorton.com/random-42-changelog/">Changelog</a></li>
}
<script src="~/js/vtnorton.apps.js"></script>
<script src="~/json/app.random42.json" type="application/ld+json">
</script>

<section class="app bg-purple">
    <div class="section-wrapper">
        <div class="row">
            <img class="col-sm-1" src="/images/Nice.png" />
            <div class="col-sm-10">
                <h2 class="white">Conjugar</h2>
                <div style="margin: 10px 0">
                    <a href="https://www.microsoft.com/store/apps/9nblggh5x1t9" class="btn white">Download</a> <a href="http://blog.vtnorton.com/random-42-changelog/" class="btn white">Changelog</a>
                </div>
                <p class="white">@Localizer["NiceShortDescription"]</p>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="section-wrapper">
        <div class="section-image-right right">
            <img class="section-image-right-img" style="padding: 20px; margin-right: -20px; padding-bottom: 40px" src="/images/apps/random.png" />
        </div>

        <div class="section-content-left left">
            <h1>@Localizer["TerreDescription"]</h1>
            <p>@Localizer["NiceDescription"]</p>
        </div>
        <div class="clean"></div>
    </div>
</section>
<section class="bg-light">
    <div class="wrapper" style="padding: 30px 0">
        @foreach (var item in (IEnumerable<FeedItem>)ViewData["feed"])
        {
            <div class="article-blog">
                <h4><a href="@item.Link">@item.Title</a></h4>
                <img src="@item.ImageURL" />
                <p>@item.Content</p>
                <p><strong><a href="@item.Link">@Localizer["ReadMore"]</a></strong></p>
            </div>
        }
        <div class="clean"></div>
    </div>
</section>