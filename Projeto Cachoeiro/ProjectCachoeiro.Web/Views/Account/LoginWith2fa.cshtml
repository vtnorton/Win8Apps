@model LoginWith2faViewModel
@{
    ViewData["Title"] = "Verificação de duas etapas";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<p>Seu login é protegido por um aplicativo de autentificação. Entre com o seu código abaixo</p>
<hr />
<form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <input asp-for="RememberMe" type="hidden" />
    <div asp-validation-summary="All"></div>

    <input asp-for="TwoFactorCode" placeholder="Código" autocomplete="off" />
    <span asp-validation-for="TwoFactorCode"></span>
    <div class="checkbox">
        <label asp-for="RememberMachine">
            <input asp-for="RememberMachine" />
            @Html.DisplayNameFor(m => m.RememberMachine)
        </label>
    </div>


</form>
<div class="box-options">
    <button type="submit" class="btn btn-default" style="width:50%">Entrar</button>
    <p>
        Não tem acesso a um aplicativo autenticador? Você pode
        <a asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]">fazer login com um código de recuperação</a>.
    </p>
</div>
