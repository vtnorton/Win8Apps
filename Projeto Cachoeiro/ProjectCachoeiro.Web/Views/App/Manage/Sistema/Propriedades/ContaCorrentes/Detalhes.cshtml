@model ProjectCachoeiro.Web.Models.Comercial.ContaCorrente
@{
    ViewData["Title"] = "Detalhes da conta";
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-9">
        <div class="toolbar">
            <div class="left">
                <h2>@Html.DisplayFor(model => model.Titulo)</h2>
            </div>
            <div class="right">
                <a class="btn" href="/ContaCorrentes/Criar"><i class="fa fa-plus"></i> Nova</a>
            </div>
            <div class="clean"></div>
        </div>
        <div class="view-element">
            <div class="row">
                <div class="col-md-7 col-sm-6">
                    <h4>Detalhes</h4>
                    <p>Veja os detalhes da conta corrente @Model.Titulo</p>
                    <div class="clean"></div>
                    <div class="row">
                        <div class="col-md-3">
                            <p><span class="small">Banco</span><br />@Html.DisplayFor(model => model.Banco)</p>
                        </div>
                        <div class="col-md-3">
                            <p><span class="small">Conta</span><br />@Html.DisplayFor(model => model.Conta)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p><span class="small">IBAN</span><br />@Html.DisplayFor(model => model.IBAN)</p>
                        </div>
                        <div class="col-md-3">
                            <p><span class="small">Swift</span><br />@Html.DisplayFor(model => model.Swift)</p>
                        </div>
                        <div class="col-md-2">
                            <p><span class="small">Aba</span><br />@Html.DisplayFor(model => model.Aba)</p>
                        </div>
                        <div class="col-md-3">
                            <p><span class="small">Branch Swift</span><br />@Html.DisplayFor(model => model.BranchSwift)</p>
                        </div>
                    </div>
                    <p><span class="small">Telefone</span><br />@Html.DisplayFor(model => model.Telefone)</p>
                    <p><span class="small">Beneficiário</span><br />@Html.DisplayFor(model => model.Beneficiario)</p>

                    @if (!string.IsNullOrEmpty(Model.Pais))
                    {
                        <p><span class="small">País</span><br />@Html.DisplayFor(model => model.Pais)</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Cidade))
                    {
                        <p><span class="small">Cidade</span><br />@Html.DisplayFor(model => model.Cidade)</p>
                    }
                    <div class="row">
                        <div class="col-md-12">
                            @if (!string.IsNullOrEmpty(Model.Endereco))
                            {
                                <p><span class="small">Endereco do banco</span><br />@Html.DisplayFor(model => model.GetEndereco)</p>
                            }
                        </div>
                    </div>
                    <br />

                </div>
                <div class="col-md-5 col-sm-6">
                    <h4>Registros</h4>
                    <p>Conheça os detalhes do cadastro e de possíveis alterações realizadas neste item.</p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UserCreated)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserCreated)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateModified)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UserModified)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserModified)
                        </dd>
                    </dl>
                    <div class="clean"></div>
                    @if (!string.IsNullOrEmpty(Model.Observacoes))
                    {
                        <br />
                        <h4>Observações</h4>
                        @Html.DisplayFor(model => model.Observacoes)
                    }
                </div>
            </div>
            @await Html.PartialAsync("~/Views/Shared/AppTaskbar.cshtml", "VIEW;ID=" + Model.Id + ";")
        </div>
    </div>
    <div class="info-bar col-md-3">
        @{
            OtherOptions otherOptions = new OtherOptions
            {
                Descricao = "Veja opções relacionadas com " + Model.Titulo,
                FeedbackEChamadoID = "DetalhesCliente",
                OpcoesRelacionadas = new Links[] {
                        new Links{
                        Titulo = "Adicionar novo cliente",
                        Url = "/Clientes/Criar"
                    },
                    new Links{
                        Titulo = "Ver lista de clientes",
                        Url = "/Clientes"
                    },
                    new Links{
                        Titulo = "Editar este cliente",
                        Url = "/Clientes/Editar/" + Model.Id
                    }
                }
            };
        }
        @Html.Partial("AppOtherOptions", otherOptions)
    </div>
</div>