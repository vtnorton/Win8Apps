@model ProjectCachoeiro.Web.Comercial.Contato
@{
    ViewData["Title"] = @Html.DisplayFor(model => model.PrimeiroNome + model.UltimoNome);
    ViewData["LOGIC"] = "UWP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-9">
        <div class="view-element">
            <div class="toolbar">
                <div class="left">
                    <h2>@Html.DisplayFor(model => model.PrimeiroNome + model.UltimoNome) <small>@Html.DisplayFor(model => model.Cargo)</small></h2>
                </div>
                <div class="clean"></div>
            </div>
            
            <div class="row">
                <!-- TODO: Fazer essa view mais parecida com o app People do Windows 10 -->
                <div class="col-md-7 col-sm-6">
                    <h4>Informações de contato</h4>
                    <p>
                        E-mail: @Html.DisplayFor(model => model.Email)<br />
                        Telefone: @Html.DisplayFor(model => model.Telefone)<br />
                    </p>
                    <br />

                    @if (Html.DisplayFor(model => model.Observacao) != null)
            {
                <h4>Observações</h4>
                <p>@Html.DisplayFor(model => model.Observacao)</p>
    }
                </div>

                <div class="col-md-5 col-sm-6">
                    <h4>Registros</h4>
                    <p>Conheça os detalhes do cadastro e de possíveis alterações realizadas neste item.</p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UserCreated)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserCreated)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DateModified)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UserModified)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserModified)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="info-bar col-md-3">
        @{
            OtherOptions otherOptions = new OtherOptions
            {
                Descricao = "Veja opções relacionadas com a apresentação de itens.",
                FeedbackEChamadoID = "ItemFamilia",
                OpcoesRelacionadas = new Links[] {
                    new Links{
                        Titulo = "Adicionar família",
                        Url = "/Familias/Create"
                    },
                    new Links{
                        Titulo = "Adicionar estado de produto",
                        Url = "/Estados/Create"
                    },
                    new Links{
                        Titulo = "Adicionar produto",
                        Url = "/Produtos/Create"
                    }
                }
            };
        }
        @Html.Partial("AppOtherOptions", otherOptions)
    </div>
</div>
<div class="taskbar">
    <div class="left">
        <a class="btn btn-link" asp-action="Index"><i class="fa fa-list-ul"></i> Voltar</a>
    </div>
    <div class="right">
        <!-- TODO: Adicionar botões de enviar e-mail e de entrar em contato -->
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-trash-o"></i>Apagar</a>
        <a class="btn" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit"></i>Editar</a>
    </div>
    <div class="clean"></div>
</div>
