@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<p>Use suas informações de login para entrar</p>
<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

    <!-- Coisas para fazer nesta pagina
    4 - Lembrar e-mail (semelhante ao gmail.com)
    5 - Entrar em modo básico
    -->

    <hr />
    <div asp-validation-summary="All"></div>
    
    <input asp-for="Email" placeholder="E-mail" />
    <span asp-validation-for="Email"></span>

    <input asp-for="Password" placeholder="Senha" />
    <span asp-validation-for="Password"></span>

    <div class="checkbox">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(m => m.RememberMe)
        </label>
    </div>

    <div class="box-options">
        <button type="submit" class="btn btn-default">Entrar</button>
        <p>
            <a asp-action="ForgotPassword">Esqueceu sua senha?</a>
        </p>
    </div>
</form>